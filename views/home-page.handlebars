{{#each posts as |post|}}
<div class="card">
    <div class="card-header">
        <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
        <p id="timePosted">{{post.createdAt}}</p>
        {{#if post.user.username}}
        <p id="author">By {{post.user.username}}</p>
        {{/if}}
    </div>
    {{!-- <div class="card-body">
        <p>{{post.body}}</p>
    </div> --}}
</div>
{{/each}}