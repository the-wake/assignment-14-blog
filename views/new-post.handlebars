<h2>New Post</h2>

<form class="form" id="new-post-form">
    <div class="form-group">
        <label for="title">Post Title:</label>
        <input type="text" id="title" class="form-input" name="post-title">
    </div>
    <div class="form-group">
        <label for="content" class="form-label">Content:</label><br>
        <textarea id="content" class="form-input" type="text" name="post-body"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
    </div>
</form>

<script src="/js/new.js"></script>
