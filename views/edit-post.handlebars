<h2>Edit post</h2>

<form class="form" id="edit-post-form">
    <div class="form-group">
        <label for="title">
            <h4>Post Title:</h4>
        </label>
        <input type="text" id="title" class="form-input" name="post-title" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="content" class="form-label">
            <h4>Content:</h4>
        </label>
        <br>
        <textarea id="content" class="form-input" type="text" name="post-body">{{post.body}}</textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit Edits</button>
    </div>
    <div class="form-group">
        {{!-- <label for="id">Post ID</label> --}}
        <input type="hidden" id="post-id" class="form-input" name="post-id" value="{{post.id}}" disabled>
    </div>
</form>
<button id="delete-btn" class="btn">Delete Post</button>

<hr>

<form class="form" id="new-comment-form">
    <div class="form-group">
        {{!-- <label for="content" class="form-label">Leave a Comment</label><br> --}}
        <textarea id="comment-body" class="form-input" type="text" name="comment-body"
            placeholder="Leave a comment"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit Comment</button>
    </div>
    <div class="form-group">
        {{!-- <label for="id">Post ID</label> --}}
        <input type="hidden" id="post-id" class="form-input" name="post-id" value="{{post.id}}" disabled>
    </div>
</form>

{{#if post.comments}}
<div id="all-comments">
    <h4>Comments</h4>
    {{#each post.comments as |comment|}}
    <div class="card">
        <div class="card-body">
            <br>
            <p>{{comment.body}}</p>
            <hr>
            â€”{{comment.user.username}} at {{comment.createdAt}}
            </p>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}


<script src="/js/comment.js"></script>
<script src="/js/edit.js"></script>
